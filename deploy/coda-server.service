[Unit]
Description=CODA Slack Server - Claude Orchestrated Development Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/workspace/coda
ExecStart=/usr/local/bin/coda-server
Restart=on-failure
RestartSec=5

# Graceful shutdown timeout (matches JoinSet abort + subprocess cleanup)
TimeoutStopSec=10

# Logging via journal
StandardOutput=journal
StandardError=journal
SyslogIdentifier=coda-server

# Environment (GH_TOKEN for GitHub CLI authentication)
EnvironmentFile=/home/ubuntu/.coda-server/env

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=no
PrivateTmp=true
ReadWritePaths=/home/ubuntu/workspace /home/ubuntu/.coda-server

[Install]
WantedBy=multi-user.target
