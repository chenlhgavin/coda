# Passwordless sudo for coda-server deployment
# Install: sudo cp deploy/sudoers-coda-deploy /etc/sudoers.d/coda-deploy && sudo chmod 0440 /etc/sudoers.d/coda-deploy

chenlh ALL=(ALL) NOPASSWD: /usr/bin/systemctl restart coda-server
chenlh ALL=(ALL) NOPASSWD: /usr/bin/systemctl daemon-reload
chenlh ALL=(ALL) NOPASSWD: /usr/bin/systemctl disable --now coda-server
chenlh ALL=(ALL) NOPASSWD: /usr/bin/systemctl enable --now coda-server
chenlh ALL=(ALL) NOPASSWD: /usr/bin/cp /home/chenlh/workspace/coda/deploy/coda-server.service /etc/systemd/system/
chenlh ALL=(ALL) NOPASSWD: /usr/bin/rm -f /etc/systemd/system/coda-server.service
